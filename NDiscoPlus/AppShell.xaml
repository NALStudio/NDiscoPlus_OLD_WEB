<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NDiscoPlus.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NDiscoPlus"
    xmlns:pages="clr-namespace:NDiscoPlus.Pages"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    Title="NDiscoPlus">

    <TabBar>
        <Tab Title="Home" Icon="{mi:Material Home}">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>  
        <Tab Title="Bridges" Icon="{mi:Material Hub}">
            <ShellContent ContentTemplate="{DataTemplate pages:BridgePage}" />
        </Tab>
        <Tab Title="Effects" Icon="{mi:Material Tune}">
            <ShellContent ContentTemplate="{DataTemplate pages:EffectPage}" />
        </Tab>
        <Tab Title="Settings" Icon="{mi:Material Settings}">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
